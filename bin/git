#!/usr/bin/env python3

import subprocess
import sys
import os
import re


def main():
    git_path = "/usr/bin/git"
    if re.match(r'^/mnt/[a-z]/', os.getcwd()):
        git_path = "git.exe"

    argv = sys.argv[:]
    argv[0] = git_path
    subprocess.run(argv)


if __name__ == "__main__":
    main()
