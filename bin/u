#!/bin/bash -e
set -x

cd ~/dotfiles

if [ -e ~/ownCloud/keepassxc/keepassxc ]; then
    chmod +x ~/ownCloud/keepassxc/keepassxc
fi


if [ ! -e config ]; then
    mkdir config
fi

if [ ! -e config/config_done ]; then
    touch config/config_done

    echo config/have_sudo | xargs -p touch
    echo config/have_gui | xargs -p touch
fi

have_sudo=1
if [ -e config/have_sudo ]; then have_sudo=0; fi

have_gui=1
if [ -e config/have_gui ]; then have_gui=0; fi

echo "Have sudo: $[!$have_sudo]"
echo "Have gui: $[!$have_gui]"

git pull

if [ -z "`ls stuff`" ]; then
    git clone git@github.com:wheybags/stuff
fi

(cd stuff && git pull)

function install_file {
	echo "$1"
	cd

	if [ -L "$1" ]; then
		exit
	fi

	cd ~/dotfiles/backups
	rm -rf "$1" >/dev/null 2>&1
	
	cd
	mv "$1" ~/dotfiles/backups >/dev/null 2>&1
	
	cd ~/dotfiles/files
	filepath=`echo $(cd $(dirname $1); pwd)/$(basename $1)`

	cd
	ln -s "$filepath"
	
	echo -en "\t>Linked "
    echo "$1"	
}
export -f install_file

cd ~/dotfiles/files
find . -maxdepth 1 ! -name "." ! -name ".." -exec bash -c 'install_file "$0"' {} \;

if [ ! -f ~/.work ]; then
    git config --global user.name "Tom Mason"
    git config --global user.email "wheybags@wheybags.com"
fi

cd ~/dotfiles
source packages.sh

if [ $have_gui -eq 0 ]; then
    dconf load /org/mate/terminal/ < mate-terminal.dconf
    dconf load /org/cinnamon/desktop/keybindings/ < keybindings.dconf
    
    python3 scripts/filter-config.py filt_to_orig
fi

